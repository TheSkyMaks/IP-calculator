<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IP_calculator.MainPage">

    <!--
    класс MainPage определяется здесь как частичный (partial),
    а в файле MainPage.xaml в определении страницы ContentPage указан класс,
    название которого совпадает с классом из MainPage.xaml.cs: x:Class="IP_calculator.MainPage" 
    -->

    <StackLayout Margin="10,35,10,10">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to IP calculator!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start calculate now!" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="IP_entry" Placeholder="255.255.0.0" TextChanged="IP_TextChanged"/>
        
        <!-- TabIndex  -->
    </StackLayout>
</ContentPage>